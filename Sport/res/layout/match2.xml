<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical" 
     android:background="@color/bg_Gray"
     >
	<com.chunsoft.view.ImageCycleView
       android:id="@+id/ad_view"
       android:layout_width="match_parent"
       android:layout_height="160dp"
        />
     <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/top_line" />
     	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:background="@color/white"
		android:orientation="horizontal"
      >
        <TextView
            android:id="@+id/tv_analysis"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/title_logo1"
            android:text="@string/match_analysis" 
            />
        <View
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:background="@color/top_line" />
        <TextView
            android:id="@+id/tv_statistic"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:drawableLeft="@drawable/title_logo2"
            android:text="@string/match_statistic"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/top_line" />
     <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:text="热门比赛"
        android:gravity="center_vertical"
        android:textColor="#767b7e"
        android:background="#f3f3f3"
        android:paddingLeft="10dp"
        /> 

	</LinearLayout>
