<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/top_menu" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
    <Button
        android:id="@+id/btn_start"
        android:background="@drawable/btn_style1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="#a1a4aa"
        android:layout_margin="10dp"
        android:text="@string/btn_start"
        />
    <Button
        android:id="@+id/btn_end"
        android:background="@drawable/btn_style1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="#a1a4aa"
        android:layout_margin="10dp"
        android:text="@string/btn_end"
        />
	</LinearLayout>
	<View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#dedfe0" 
         />
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:text="@string/team" 
            android:textColor="#646b76"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:text="@string/time" 
            android:textColor="#646b76"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="胜负"
            android:textColor="#646b76" 
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="赢" 
            android:textColor="#646b76"
            />
       
    </LinearLayout>
    <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#dedfe0" 
           />
    <com.chunsoft.view.xListview.XListView
        android:id="@+id/result_x_lv"
        android:background="#eeeeee"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000" >       
    </com.chunsoft.view.xListview.XListView>
</LinearLayout>
